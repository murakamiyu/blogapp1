<div class="contentsrow center">
    <%= form_tag("/blogs/#{@blog.id}", method: :patch ) do %>
      <h5>
        編集する
      </h5>
      <input placeholder="title" type="text" name="name" value="<%= @blog.name %>" autofocus="true">
      <input placeholder="Image Url" type="text" name="image" value="<%= @blog.image %>" autofocus="true">
      <textarea cols="30" name="text" placeholder="text" rows="10"><%= @blog.text %></textarea>
      <input type="submit" value="SENT">
    <% end %>
  </div>